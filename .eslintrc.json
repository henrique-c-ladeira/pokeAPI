{
  "env": {
      "commonjs": true,
      "es2021": true,
      "node": true
  },
  "extends": [
      "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 12
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
      "semi": [2, "always"],
      "no-undef": "off",
      "no-use-before-define": "off"
  }
}
